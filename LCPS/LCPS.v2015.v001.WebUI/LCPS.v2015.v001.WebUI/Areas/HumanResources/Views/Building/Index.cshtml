@model IEnumerable<LCPS.v2015.v001.NwUsers.HumanResources.HRBuilding>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/HumanResources/Views/Shared/_HumanResourcesLayout.cshtml";
}

<h2>Buildings</h2>

<p>
    @Html.ActionLink("Create New", "Create") | <a href="@Url.Action("ImportBuildings", "HRImport", new { area = "HumanResources" }, null)">Import (TSV)</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BuildingId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BuildingId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BuildingKey }) |
            @Html.ActionLink("Details", "Details", new { id=item.BuildingKey }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BuildingKey })
        </td>
    </tr>
}

</table>
