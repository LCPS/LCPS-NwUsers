@using LCPS.v2015.v001.WebUI.Areas.HumanResources.Models;
@model IEnumerable<LCPS.v2015.v001.NwUsers.HumanResources.HRRoom>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/HumanResources/Views/Shared/_HumanResourcesLayout.cshtml";
}

<h2>Rooms</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { b = new Guid(Request.QueryString["b"]) })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BuildingId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrimaryOccupant)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @HRRoomModel.GetBuildingName(item.BuildingId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrimaryOccupant)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.RoomKey }) |
            @Html.ActionLink("Details", "Details", new { id=item.RoomKey }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RoomKey })
        </td>
    </tr>
}

</table>
