@using LCPS.v2015.v001.WebUI.Areas.Filters.Models;

@model MemberFilterModel

@{
    ViewBag.Title = "_MemberFilterDetail";
    Layout = "~/Areas/LcpsLdap/Views/LDAPTemplate/_Layout.cshtml";
}


<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#filterMobile">New Filter</button>

<!-- Modal -->
<div id="filterModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Member Filter</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm(Model.FormAction, Model.FormController, new { @area = Model.FormAction }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.Filter.FilterId)

                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Filter.Title, new { @class = "col-md-2 control-label" })
                            @Html.TextBoxFor(model => model.Filter.Title, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Filter.Title)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Filter.Description, new { @class = "col-md-2 control-label" })
                            @Html.TextBoxFor(model => model.Filter.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Filter.Description)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Filter.FilterClass, new { @class = "col-md-2 control-label" })
                            @Html.DisplayFor(model => model.Filter.FilterClass, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Filter.Category, new { @class = "col-md-2 control-label" })
                            @Html.DisplayFor(model => model.Filter.Category, new { @class = "form-control" })
                        </div>
                        <div class="modal-footer">
                            <input type="submit" value="create" class="btn btn-info" />
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                        }
                    </div>


                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


