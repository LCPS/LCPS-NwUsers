@using LCPS.v2015.v001.NwUsers.Importing;

@model IEnumerable<ImportItem>

    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.ImportStatus)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Comment)</th>
        </tr>
        @foreach (ImportItem item in Model)
        {
            <tr class="@item.ImportStatus">
                <td>
                    @switch (item.ReadStatus)
                    {
                        case LCPS.v2015.v001.NwUsers.Importing.ImportItem.LcpsImportStatus.danger:
                            <i class="fa fa-remove text-danger"></i>
                            break;
                        case LCPS.v2015.v001.NwUsers.Importing.ImportItem.LcpsImportStatus.@default:
                        <i class="fa fa-check text-success"></i>
                            break;
                    }
                </td>
                <td>
                    <span class="text-@item.ReadStatus">@item.Description</span>
                </td>
                <td>
                    <span class="text-@item.ReadStatus">
                        @item.Comment
                    </span>
                </td>
            </tr>
        }
    </table>


