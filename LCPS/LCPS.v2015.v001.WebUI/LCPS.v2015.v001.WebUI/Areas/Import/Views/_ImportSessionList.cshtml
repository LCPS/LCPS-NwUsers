@model IEnumerable<LCPS.v2015.v001.NwUsers.Importing.ImportSession>


<h4><span class="badge">@Model.Count().ToString()</span> Import Sessions</h4>

@if(Model != null && Model.Count() > 0)
{ 
    <a href="@Url.Action("DeleteAll", "ImportSession", new {  area = "Import", u = ViewContext.HttpContext.Request.RawUrl, t = Model.First().FullAssemblyTypeName } )" class="btn btn-xs btn-danger" onclick="return confirm('Are you sure you want to delete ALL of these sessions?');">Delete All</a>
}

<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.SessionDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a id="Delete" href="@Url.Action("Delete", "ImportSession", new { area = "Import", @id = item.SessionId, @u = ViewContext.HttpContext.Request.RawUrl  })" onclick="return confirm('Are you sure you want to delete this session?');" class="btn btn-xs btn-danger"><i class="fa fa-remove"></i></a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SessionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
        </tr>
    }

</table>