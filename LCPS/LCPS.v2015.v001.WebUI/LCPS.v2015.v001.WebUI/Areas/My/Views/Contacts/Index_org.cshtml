@using LCPS.v2015.v001.WebUI.Areas.My.Models;
@using LCPS.v2015.v001.NwUsers.Filters;

@model MyContactModel

@{
    ViewBag.Title = "Contacts";
    Layout = "~/Areas/My/Views/Shared/_Layout.cshtml";
}

<style>
    .selected {
        padding: 8px;
        border-radius: 12px;
        background-color: white;
    }

    .f-carat {
        cursor: pointer;
    }

    <!--
    .collapsible {
        margin-bottom: 20px;
        padding: 10px;
        width: 300px;
        color: #333333;
    }

        .collapsible > button {
            height: 100%;
            float: right;
            border: 1px solid #999999;
            background: #999999;
